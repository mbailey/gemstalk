#!/usr/bin/env ruby

# Embed in a String to clear all previous ANSI sequences.
CLEAR   = "\e[0m"
BOLD    = "\e[1m"

# Colors
BLACK   = "\e[30m"
RED     = "\e[31m"
GREEN   = "\e[32m"
YELLOW  = "\e[33m"
BLUE    = "\e[34m"
MAGENTA = "\e[35m"
CYAN    = "\e[36m"
WHITE   = "\e[37m"


puts <<-EOF
#{GREEN}
=============================================================================
==      =====================      ================  ==  ====================
=   ==   ===================  ====  ===============  ==  ====================
=  ====  ===================  ====  ===  ==========  ==  ====================
=  =========   ===  =  = ====  =======    ===   ===  ==  =  ===   ===  =   ==
=  ========  =  ==        =====  ======  ===  =  ==  ==    ===  =  ==    =  =
=  ===   ==     ==  =  =  =======  ====  ======  ==  ==   ====     ==  ======
=  ====  ==  =====  =  =  ==  ====  ===  ====    ==  ==    ===  =====  ======
=   ==   ==  =  ==  =  =  ==  ====  ===  ===  =  ==  ==  =  ==  =  ==  ======
==      ====   ===  =  =  ===      ====   ===    ==  ==  =  ===   ===  ======
=============================================================================

                     RubyGem Release Notification Service

                         Command Line Tool coming soon!

                            Till then, use the web: 

                             http://GemStalker.com
#{CLEAR}
EOF

